<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarilloFondo"
    android:orientation="vertical"
    tools:context=".MenuActivity">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/itim"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/naranjaTitulo"
        android:textSize="48sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="5dp"
        android:backgroundTint="@color/amarilloFondo"
        android:background="@color/amarilloFondo">

        <ImageButton
            android:id="@+id/ibCalendario"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_marginLeft="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/amarilloFondo"
            app:srcCompat="@drawable/calendario" />

        <ImageButton
            android:id="@+id/ibPreguntasFrec"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/amarilloFondo"
            app:srcCompat="@drawable/preguntas" />

        <ImageButton
            android:id="@+id/ibMisMascotas"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/amarilloFondo"
            app:srcCompat="@drawable/mis_mascotas" />

        <ImageButton
            android:id="@+id/ibEntrenamiento"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/amarilloFondo"
            app:srcCompat="@drawable/entrenamiento" />

        <ImageButton
            android:id="@+id/ibCerrarSesion"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@color/amarilloFondo"
            app:srcCompat="@drawable/cerrarsesion" />


    </GridLayout>


</LinearLayout>